            android:text="Mantenha seus dados sempre atualizados." />

        <LinearLayout
            style="@style/SecondaryWindowTheme.ProfileDataLine" >

            <TextView
                style="@style/SecondaryWindowTheme.Text.Small"
                android:text="Em caso de alterações, ligue para " />

            <TextView
                android:id="@+id/change_profile_data_number"
                style="@style/SecondaryWindowTheme.Text.Small.PhoneNumber.NotClicked"
                android:text="(12) 1234-5678" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>