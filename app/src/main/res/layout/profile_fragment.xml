        <View style="@style/SecondaryWindowTheme.Line.UnderTitle" />

        <LinearLayout style="@style/SecondaryWindowTheme.ProfileDataLine">

            <TextView
                style="@style/SecondaryWindowTheme.Text.FieldDescription"
                android:text="Nome:" />

            <TextView
                style="@style/SecondaryWindowTheme.Text"
                android:text="Jürgen Werner Heinz Geicke" />
        </LinearLayout>

        <LinearLayout style="@style/SecondaryWindowTheme.ProfileDataLine">

            <TextView
                style="@style/SecondaryWindowTheme.Text.FieldDescription"
                android:text="Email:" />

            <TextView
                style="@style/SecondaryWindowTheme.Text"
                android:text="geicke@ita.br" />
        </LinearLayout>


        <LinearLayout style="@style/SecondaryWindowTheme.ProfileDataLine">

            <TextView
                style="@style/SecondaryWindowTheme.Text.FieldDescription"
                android:text="Telefone:" />

            <TextView
                style="@style/SecondaryWindowTheme.Text"
                android:text="(12) 93141-5926" />

            <TextView
